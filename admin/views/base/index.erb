<div class="tabs-content">
  <table id="list" class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th class="header">
          <%= mat(:account, :id) %></th>
        <th class="header">
          <%= mat(:account, :名前) %></th>
        <th class="header">
          <%= mat(:account, :本文) %></th>
        <th class="header">
          <%= mat(:account, :メールアドレス) %></th>
        <th class="header">
          <%= mat(:account, :ステータス) %></th>
        <th class="header list-row-action-header"></th>
      </tr>
    </thead>
    <tbody>
      <% @inquiry.each do |inquiry| %>
        <tr class="list-row">
          <td class="list-column">
            <%= inquiry.id %>
          </td>
          <td class="list-column">
            <%= inquiry.name %>
          </td>
          <td class="list-column">
            <%= inquiry.message %>
          </td>
          <td class="list-column">
            <%= inquiry.email %>
          </td>
          <td class="list-column">
            <% form_for inquiry, url(:inquiry,:update,:id => inquiry.id) do |f| %>
              <%= f.select(:status, :options => ['未回答', '回答済み'],:selected => inquiry.status)%>
              <%= f.submit '確認', class: 'btn btn-primary' %>
            <% end %>
          </td>
          <td class="list-column">
            <%= link_to "削除",url(:inquiry, :destroy, :id => inquiry.id), class: 'btn btn-default' %>

          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
