<ul class="nav nav-tabs">
  <li> <%= link_to tag_icon(:list, pat(:list)), url(:contacts, :index) %></li>
  <li> <%= link_to tag_icon(:plus, pat(:new)), url(:contacts, :new) %></li>
  <li class="active"> <%= link_to tag_icon(:edit, pat(:edit)), url(:contacts, :edit, :id => @contact.id) %></li>
</ul>
<div class="tabs-content">
  <% form_for :contact, url(:contacts, :update, :id => @contact.id), :method => :put, :class => 'form-horizontal' do |f| %>
